<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dof_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/dof_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".DofActivity" >

        <TextView
            android:id="@+id/dof_label_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dof_label_vendor" />

        <Spinner
            android:id="@+id/dof_spinner_vendors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dof_label_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dof_label_camera" />

        <Spinner
            android:id="@+id/dof_spinner_cameras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dof_label_aperture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dof_label_aperture" />

        <Spinner
            android:id="@+id/dof_spinner_apertures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dof_label_focalLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dof_label_focalLength" />

        <EditText
            android:id="@+id/dof_editText_focalLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" >
        </EditText>

        <Button
            android:id="@+id/dof_button_calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/dof_button_calculate" />

        <TextView
            android:id="@+id/dof_label_hyperFocalResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dof_label_hyperFocal" />
    </LinearLayout>

</ScrollView>
