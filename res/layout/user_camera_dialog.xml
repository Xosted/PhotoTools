<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ListView
        android:id="@+id/userCamera_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/userCamera_model"
        android:layout_alignParentTop="true" >
    </ListView>

    <ImageView
        android:id="@+id/userCamera_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/userCamera_model"
        android:background="@color/divider" />

    <EditText
        android:id="@+id/userCamera_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/userCamera_addButton"
        android:hint="@string/userCameraModel"
        android:ems="10" >
    </EditText>

    <ImageView
        android:id="@+id/userCamera_addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_new" />

</RelativeLayout>