<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/evpairs_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EvpairsActivity" >

    <LinearLayout
        android:id="@+id/evpairs_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/evpairs_label_currentValues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evpairs_label_currentValues"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/evpairs_label_currentApperture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evpairs_label_apperture" />

        <Spinner
            android:id="@+id/evpairs_spinner_currentAperture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/evpairs_label_currentIso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evpairs_label_iso" />

        <Spinner
            android:id="@+id/evpairs_spinner_currentIso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/evpairs_label_currentShutterSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evpairs_label_shutterSpeed" />

        <Spinner
            android:id="@+id/evpairs_spinner_currentShutterSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/evpairs_label_newValues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evpairs_label_newValues"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/evpairs_label_newApperture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evpairs_label_apperture" />

        <Spinner
            android:id="@+id/evpairs_spinner_newAperture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/evpairs_label_newIso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evpairs_label_iso" />

        <Spinner
            android:id="@+id/evpairs_spinner_newIso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/evpairs_label_newShutterSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evpairs_label_shutterSpeed" />

        <Spinner
            android:id="@+id/evpairs_spinner_newShutterSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TableLayout
            android:id="@+id/evpairs_tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/evpairs_tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/evpairs_button_calculate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="@string/evpairs_button_calculate" />

                <Button
                    android:id="@+id/evpairs_button_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:onClick="onClick"
                    android:text="@string/evpairs_button_clear" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

</ScrollView>