<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EvpairsActivity" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_currentValues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_values"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_currentApperture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aperture_string" />

    <Spinner
        android:id="@+id/spinner_currentAperture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_currentISO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iso" />

    <Spinner
        android:id="@+id/spinner_currentISO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_currentShutterSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shutter_speed" />

    <Spinner
        android:id="@+id/spinner_currentShutterSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_newValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_values"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_newApperture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aperture_string" />

    <Spinner
        android:id="@+id/spinner_newAperture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_newISO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iso" />

    <Spinner
        android:id="@+id/spinner_newISO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_newShutterSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shutter_speed" />

    <Spinner
        android:id="@+id/spinner_newShutterSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate_button" />

    </LinearLayout>
</ScrollView>