<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/evpairs_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EvpairsFragment" >

    <LinearLayout
        android:id="@+id/evpairs_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/evpairs_label_currentValues"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/evpairs_label_currentValues"
            android:textColor="@color/headear" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Spinner
                android:id="@+id/evpairs_spinner_currentAperture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="@string/evpairs_label_selectAperture"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/evpairs_spinner_currentIso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="@string/evpairs_label_selectIso"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/evpairs_spinner_currentShutterSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="@string/evpairs_label_selectShutterSpeed"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <TextView
            android:id="@+id/evpairs_label_newValues"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/evpairs_label_newValues"
            android:textColor="@color/headear" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Spinner
                android:id="@+id/evpairs_spinner_newAperture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="@string/evpairs_label_selectAperture"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/evpairs_spinner_newIso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="@string/evpairs_label_selectIso"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/evpairs_spinner_newShutterSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="@string/evpairs_label_selectShutterSpeed"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <TextView
            android:id="@+id/evpairs_label_step"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/evpairs_label_step"
            android:textColor="@color/headear" />

        <SeekBar
            android:id="@+id/evpairs_seekBar_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:max="2"
            android:progress="0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/evpairs_button_calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/evpairs_button_calculate" />

            <Button
                android:id="@+id/evpairs_button_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:onClick="onClick"
                android:text="@string/evpairs_button_clear" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>