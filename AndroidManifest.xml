<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.neverdark.phototools"
    android:versionCode="1"
    android:versionName="0.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"        
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.neverdark.phototools.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.neverdark.phototools.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="ru.neverdark.phototools.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.neverdark.phototools.MainActivity" />
        </activity>
        <activity
            android:name="ru.neverdark.phototools.DofActivity"
            android:label="@string/title_activity_dof"
            android:parentActivityName="ru.neverdark.phototools.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.neverdark.phototools.MainActivity" />
        </activity>
        <activity
            android:name="ru.neverdark.phototools.EvpairsActivity"
            android:label="@string/title_activity_evpairs"
            android:parentActivityName="ru.neverdark.phototools.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.neverdark.phototools.MainActivity" />
        </activity>
        <activity
            android:name="ru.neverdark.phototools.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
